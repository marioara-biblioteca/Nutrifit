<style>
    body {
        height: 100vh;
        background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.4)), 
            url("https://images.unsplash.com/photo-1621508638997-e30808c10653?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=880&q=80");
        background-size:cover;
        background-position:50% 0;
        text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
        box-shadow: inset 0 0 10rem rgba(0, 0, 0, 0.1);
        opacity: 0.6;
    }
    a{
            color: pink !important;
        }
    .footer span{
        color: pink;
    }
    .card-body:hover{
        background-color: rgba(255, 220, 246, 0.39);
    }
    #error{
        background-color: rgba(241, 213, 233, 0.144) !important;
    }
</style>

<% layout('boilerplate')%>
<div class="row">
    <div class="col-6 offset-3">
        <div  class="card shadow">
            <div  class="card-body">
                <div class="alert alert-danger" id="error" role="alert">
                    <h4 class="alert-heading"><%=err.message%></h4>
                     <p><%= err.stack.split('\n')[1] %></p>
                </div>
            </div>
        </div>
        <div>
            <span><a href="/">Back</a></span>
        </div>
    </div>
</div>