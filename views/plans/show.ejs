<style>
    body{
       background-image: linear-gradient(rgba(70, 69, 69, 0.4), rgba(0, 0, 0, 0.4)),url("https://images.unsplash.com/photo-1517093728432-a0440f8d45af?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjd8fGhlYWx0aHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=1200&q=60") !important;
       background-repeat: repeat;
       background-size: auto;
    }
</style>
<% layout('./boilerplate')%>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class=" font-weight-light"><%= plan.title %> </h1>
        <div  class="card border-lights mb-3 d" >
            <div class="card-header bg-transparent border-lights"></div>
              <div class="card-body text-lights">
                <h5 class="card-title"><%= plan.description %>  </h5>
          </div>
        </div>
       <% if(userPlan && userPlan.title === plan.title) {%> 
        <div class="mb-3">
            <a class="px-4" href="/plans">Back to All Plans</a>
        </div>
      <% } %> 
      <% if(currentUser.username=='admin') {%> 
        <div class="mb-3"></div>
        <a class="mb-1 px-4"  href="/plans/<%=plan._id%>/edit">Edit Plan</a> 
        <form class="d-inline" action="/plans/<%=plan._id%>?_method=DELETE" method="POST">
          <button style="opacity: 70%;" type="submit" class="px-4 btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %> 
        
    </div>
</div>
